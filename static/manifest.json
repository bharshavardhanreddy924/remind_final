    "screenshots": [
        {
            "src": "/static/images/screenshots/dashboard.png",
            "sizes": "1080x1920",
            "type": "image/png",
            "platform": "narrow",
            "label": "Dashboard"
        },
        {
            "src": "/static/images/screenshots/tasks.png",
            "sizes": "1080x1920",
            "type": "image/png",
            "platform": "narrow",
            "label": "Tasks"
        },
        {
            "src": "/static/images/screenshots/medications.png",
            "sizes": "1080x1920",
            "type": "image/png",
            "platform": "narrow",
            "label": "Medications"
        },
        {
            "src": "/static/images/screenshots/memory-training.png",
            "sizes": "1080x1920",
            "type": "image/png",
            "platform": "narrow",
            "label": "Memory Training"
        }
    ],
    "shortcuts": [
        {
            "name": "View Dashboard",
            "short_name": "Dashboard",
            "description": "Go to your personalized dashboard",
            "url": "/user_dashboard?source=shortcut",
            "icons": [{ "src": "/static/images/icons/dashboard-icon.png", "sizes": "192x192" }]
        },
        {
            "name": "Manage Tasks",
            "short_name": "Tasks",
            "description": "View and manage your daily tasks",
            "url": "/tasks?source=shortcut",
            "icons": [{ "src": "/static/images/icons/tasks-icon.png", "sizes": "192x192" }]
        },
        {
            "name": "Medication Schedule",
            "short_name": "Meds",
            "description": "Check your medication schedule",
            "url": "/medications?source=shortcut",
            "icons": [{ "src": "/static/images/icons/meds-icon.png", "sizes": "192x192" }]
        },
        {
            "name": "Memory Training",
            "short_name": "Training",
            "description": "Start memory exercises",
            "url": "/memory_training?source=shortcut",
            "icons": [{ "src": "/static/images/icons/brain-icon.png", "sizes": "192x192" }]
        }
    ],
    "related_applications": [],
    "categories": [
        "health",
        "healthcare",
        "medical",
        "lifestyle"
    ],
    "scope": "/",
    "serviceworker": {
        "src": "/static/sw.js",
        "scope": "/",
        "use_cache": true,
        "update_via_cache": "none"
    },
    "display_override": ["standalone", "fullscreen", "minimal-ui"],
    "handle_links": "preferred",
    "edge_side_panel": {
        "preferred_width": 400
    },
    "iarc_rating_id": "",
    "id": "remind-memory-care-app",
    "protocol_handlers": [
        {
            "protocol": "web+remind",
            "url": "/?protocol_handler=%s"
        }
    ],
    "launch_handler": {
        "client_mode": ["focus-existing", "auto"]
    },
    "share_target": {
        "action": "/share-target",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url",
            "files": [
                {
                    "name": "photos",
                    "accept": ["image/*"]
                }
            ]
        }
    }
}
  